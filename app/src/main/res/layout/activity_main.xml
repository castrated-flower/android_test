            android:text="DoTA 2"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="327dp"
        android:layout_height="64dp"
        android:layout_marginStart="24dp"
